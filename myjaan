<body>

<div class="card">
    <h1>My Queen üåô‚ú®</h1>
    <p>
        In this whole universe of stars...  
        you are my brightest one.  
        Dheeraj belongs only to you. üíñ  
    </p>
    <h2>Will You Be My Valentine?</h2>

    <div class="buttons">
        <button id="yesBtn" onclick="sayYes()">Yes Dheeraj üíç</button>
        <button id="noBtn" ontouchstart="moveNo()" onmouseover="moveNo()">No üòú</button>
    </div>
</div>

<script>

let noCount = 0;

function moveNo(){
    const noBtn = document.getElementById("noBtn");
    const yesBtn = document.getElementById("yesBtn");

    noCount++;

    // Teleport anywhere
    noBtn.style.left = Math.random()*300 + "px";
    noBtn.style.top = Math.random()*120 + "px";

    // Shrink No (FIXED)
    let size = 1 - (noCount*0.15);
    if(size < 0.1) size = 0.1;
    noBtn.style.transform = `scale(${size})`;

    // Grow Yes (FIXED)
    yesBtn.style.transform = `scale(${1 + noCount*0.2})`;

    if(noCount==2) alert("Are you sure My Queen? ü•∫");
    if(noCount==4) alert("Dheeraj's heart will break üò≠");
    if(noCount>=6) noBtn.innerHTML="Too late üòè";
}

function sayYes(){
    document.body.innerHTML=`
        <div class="success">
            <h1>She Said YES!!! üíç‚ù§Ô∏è</h1>
            <p style="margin-top:20px;">
                My Queen chose Dheeraj üíñ  
                This love story just became legendary ‚ú®  
            </p>
        </div>
    `;

    for(let i=0;i<80;i++){
        createHeart();
    }
}

function createHeart(){
    const heart=document.createElement("div");
    heart.innerHTML="üíñ";
    heart.style.position="absolute";
    heart.style.left=Math.random()*100+"vw";
    heart.style.top=Math.random()*100+"vh";
    heart.style.fontSize=Math.random()*20+15+"px";
    document.body.appendChild(heart);
    setTimeout(()=>heart.remove(),4000);
}

// Create stars
for(let i=0;i<100;i++){
    const star=document.createElement("div");
    star.classList.add("star");
    star.style.left=Math.random()*100+"vw";
    star.style.top=Math.random()*100+"vh";
    document.body.appendChild(star);
}

</script>

